<!DOCTYPE html>
<html>
  <head>
    <title>Tri'Harder</title>

    <meta property="og:title" content="Tri'Harder" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://tri-harder.herokuapp.com/#/" />
    <meta property="og:image" content='<%= image_url('splash_snapshot.png') %>' />
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <script type="text/javascript"> 
      window.logoText = '<%= image_url("logo_and_txt.png") %>';
      window.logo = '<%= image_url("logo.png") %>';
      window.gitBW = '<%= image_url("git_black_and_white.png") %>';
      window.linkedInBW = '<%= image_url("linkedin_logo.png") %>';
      window.splash = '<%= image_url("splash.png") %>';
      window.topoCut = '<%= image_url("topo_cut.png") %>';
      window.phone = '<%= image_url("phone_back_drop.png") %>';
      window.phone2 = '<%= image_url("phone_back_drop2.png") %>';
      window.dots = '<%= image_url("dots.png") %>';
      window.flag = '<%= image_url("american_flag.png") %>';
      window.logoGrey = '<%= image_url("logo_and_text_grey.png") %>';
      window.topoUncut = '<%= image_url("topo_uncut.png") %>';
      window.logoBlack = '<%= image_url("logo_and_text_black.png") %>';
      window.captcha = '<%= image_url("captcha.png") %>';
      window.arrow = '<%= image_url("drop_down_arrow.png") %>';
      window.splash_snapshot = '<%= image_url("splash_snapshot.png") %>';
      window.camel = '<%= image_url("camel.png") %>';
      window.shark = '<%= image_url("shark.png") %>';
      window.squirrel = '<%= image_url("squirrel.png") %>';
      window.rabbit = '<%= image_url("rabbit.png") %>';
      window.bear = '<%= image_url("bear.png") %>';
      window.turtle = '<%= image_url("turtle.png") %>'
    </script>

    <script type="text/javascript">
      window.googleAPIKey = "<%= Rails.application.credentials.google[:api_key] %>"
    </script>
  
    <script src="https://polyfill.io/v3/polyfill.min.js?features=default"></script>

    <script defer
      src="https://maps.googleapis.com/maps/api/js?key=<%= Rails.application.credentials.google[:api_key] %>&libraries=&v=weekly">
    </script>    

    <link rel="shortcut icon" href="<%= image_url('logo.png') %>" type="image/png">

  </head>

  <body class="html-body">
    <%= yield %>
  </body>

</html>
